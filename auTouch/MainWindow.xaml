<Window x:Class="auTouch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:auTouch"
        mc:Ignorable="d"    
        Title="MainWindow" Height="600" Width="500">
    <Window.Resources>
        <Style x:Key="Dot_Table_Row" TargetType="DockPanel">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="Margin" Value="10"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <Button x:Name="Btn_Create" Width="80" Height="50" Click="Btn_Create_Click" Content="Create" FontSize="20"/>
            <Button x:Name="Btn_Run" Width="80" Height="50" Click="BtnClick" Content="Run" FontSize="20"/>
        </StackPanel>
        <StackPanel Grid.Row="1">
            <DockPanel Style="{StaticResource Dot_Table_Row}">
                <TextBlock Text="{Binding Path=Name}"/>
            </DockPanel>
            <DockPanel Style="{StaticResource Dot_Table_Row}">
                <TextBlock Margin="0 0 10 0">次數</TextBlock>
                <TextBox Text="{Binding Path=Count, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            </DockPanel>
            <DockPanel Style="{StaticResource Dot_Table_Row}">
                <TextBlock Margin="0 0 10 0">間隔</TextBlock>
                <TextBox Text="{Binding Path=Interval, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            </DockPanel>
            <DockPanel Style="{StaticResource Dot_Table_Row}">
                <Button Content="Delete" Click="Delete_Dot"/>
            </DockPanel>
        </StackPanel>
    </Grid>
</Window>
