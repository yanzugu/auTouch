<Window x:Class="auTouch.Dot"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:auTouch"
        mc:Ignorable="d"
        Height="50" Width="50" WindowStyle="None" BorderThickness="0"
        ResizeMode="NoResize" MouseDown="Drag_Window" AllowsTransparency="True" Background="Transparent" Cursor="Hand">
    <Window.Resources>
        <Color x:Key="Dot_Color">AliceBlue</Color>
    </Window.Resources>

    <Border BorderThickness="5" CornerRadius="50">
        <Border.Background>
            <SolidColorBrush Color="Black" Opacity="0.1"/>
        </Border.Background>
        <Border.BorderBrush>
            <SolidColorBrush Color="{StaticResource Dot_Color}"/>
        </Border.BorderBrush>

        <Border Width="10" Height="10" CornerRadius="10">
            <Border.Background>
                <SolidColorBrush Color="{StaticResource Dot_Color}"/>
            </Border.Background>
        </Border>
    </Border>
</Window>
